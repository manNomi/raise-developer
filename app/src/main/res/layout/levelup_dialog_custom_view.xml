<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/border_radius_custom"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직원"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/levelup_custom_view_image"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_square_white"
            />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                />
        <TextView
            android:id="@+id/levelup_custom_view_text"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="하벌드 AI 박사 학위를 취득한 인마대 김병X 교수님"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:background="@drawable/border_square_white"
            android:layout_gravity="center"
            android:padding="10dp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="필요 LV"
            android:gravity="right"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:textColor="@color/black"
            />
            <TextView
                android:id="@+id/condition_level_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:textColor="@color/black"
                />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>